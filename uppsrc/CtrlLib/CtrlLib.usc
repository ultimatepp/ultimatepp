fn PaintTab(w, x, y, text, color)
{
	tsz = GetSmartTextSize(text, StdFont());
	h = 4 * tsz.cy / 3;
	sz = Size(tsz.cx + tsz.cy, h);
	r = RectC(x, y, sz.cx, sz.cy);
	w.DrawRect(r, color);
	DrawButtonFrame(w, r);
	w.DrawSmartText(x + tsz.cy / 2, y + 4, text, StdFont(), :SBlack, sz.cx);
	sz.cx -= 4;
	return sz;
}

